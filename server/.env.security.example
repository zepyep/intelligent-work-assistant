# 安全配置示例文件\n# 复制此文件为 .env 并填入实际值\n\n# JWT 配置\nJWT_SECRET=your-super-secret-jwt-key-here-change-in-production\nJWT_EXPIRES_IN=24h\nJWT_REFRESH_EXPIRES_IN=7d\n\n# 加密配置\nENCRYPTION_SECRET=your-32-char-encryption-secret-key\nUSER_DATA_KEY=your-user-data-encryption-key\nWECHAT_ENCRYPTION_KEY=your-wechat-data-encryption-key\nAPI_TOKEN_KEY=your-api-token-encryption-key\n\n# 会话配置\nSESSION_SECRET=your-session-secret-key\nSESSION_MAX_AGE=86400000\n\n# 密码策略配置\nPASSWORD_MIN_LENGTH=8\nPASSWORD_REQUIRE_NUMBERS=true\nPASSWORD_REQUIRE_UPPERCASE=true\nPASSWORD_REQUIRE_LOWERCASE=true\nPASSWORD_REQUIRE_SYMBOLS=false\nPASSWORD_MAX_ATTEMPTS=5\nPASSWORD_LOCKOUT_DURATION=900\n\n# 速率限制配置\nRATE_LIMIT_WINDOW_MS=900000\nRATE_LIMIT_MAX_REQUESTS=100\n\n# IP白名单配置\nENABLE_IP_WHITELIST=false\nALLOWED_IPS=127.0.0.1,::1,192.168.1.0/24\n\n# HTTPS配置（生产环境）\nHTTPS_ENABLED=false\nFORCE_HTTPS=false\n\n# 文件上传安全配置\nMAX_FILE_SIZE=20971520\nENABLE_VIRUS_SCAN=false\nQUARANTINE_PATH=./quarantine\n\n# API密钥配置\nADMIN_API_KEYS=admin-key-1,admin-key-2\nWECHAT_WEBHOOK_KEY=your-wechat-webhook-verification-key\nSYSTEM_API_KEYS=system-key-1\n\n# 数据库安全配置\nDB_SSL=false\nDB_QUERY_TIMEOUT=30000\nDB_POOL_SIZE=10\nBACKUP_ENCRYPTION=false\n\n# 日志安全配置\nENCRYPT_LOGS=false\nENABLE_AUDIT_LOG=true\n\n# 安全监控配置\nENABLE_ANOMALY_DETECTION=false\nENABLE_INTRUSION_DETECTION=false\nENABLE_SECURITY_ALERTS=false\nSECURITY_ALERT_WEBHOOK=https://your-webhook-url.com/security-alerts\nSECURITY_ALERT_EMAIL=security@yourcompany.com\n\n# 开发环境配置\nNODE_ENV=development\nCLIENT_URL=http://localhost:3000\nPORT=5000\n\n# 数据库配置\nMONGODB_URI=mongodb://localhost:27017/intelligent-work-assistant\n\n# 外部服务配置\nOPENAI_API_KEY=your-openai-api-key\nWECHAT_APP_ID=your-wechat-app-id\nWECHAT_APP_SECRET=your-wechat-app-secret\nGOOGLE_CLIENT_ID=your-google-client-id\nGOOGLE_CLIENT_SECRET=your-google-client-secret\nMICROSOFT_CLIENT_ID=your-microsoft-client-id\nMICROSOFT_CLIENT_SECRET=your-microsoft-client-secret\n\n# 生产环境额外配置示例\n# NODE_ENV=production\n# HTTPS_ENABLED=true\n# FORCE_HTTPS=true\n# ENABLE_IP_WHITELIST=true\n# ENABLE_ANOMALY_DETECTION=true\n# ENABLE_INTRUSION_DETECTION=true\n# ENABLE_SECURITY_ALERTS=true\n# ENCRYPT_LOGS=true\n# DB_SSL=true\n# BACKUP_ENCRYPTION=true"