# 服务器配置
PORT=5000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/intelligent-work-assistant
DB_NAME=intelligent_work_assistant

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# 微信公众号配置
WECHAT_APPID=your-wechat-appid
WECHAT_APPSECRET=your-wechat-appsecret
WECHAT_TOKEN=your-wechat-token
WECHAT_ENCODING_AES_KEY=your-wechat-encoding-aes-key

# AI 服务配置
# 默认使用的AI提供商 (openai/claude/qwen/ernie/zhipu/custom)
AI_PROVIDER=openai

# OpenAI配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-organization
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_API_URL=https://api.openai.com

# Claude配置 (Anthropic)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_API_URL=https://api.anthropic.com

# 通义千问配置 (阿里云)
QWEN_API_KEY=your-qwen-api-key
QWEN_API_URL=https://dashscope.aliyuncs.com/api/v1

# 文心一言配置 (百度)
ERNIE_API_KEY=your-ernie-api-key
ERNIE_SECRET_KEY=your-ernie-secret-key
ERNIE_API_URL=https://aip.baidubce.com

# 智谱AI配置 (ChatGLM)
ZHIPU_API_KEY=your-zhipu-api-key
ZHIPU_API_URL=https://open.bigmodel.cn/api/paas/v4

# 自定义AI API配置
CUSTOM_AI_API_KEY=your-custom-ai-api-key
CUSTOM_AI_API_URL=https://your-custom-ai-api.com
CUSTOM_AI_MODEL=your-custom-model

# 语音服务配置
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-speech-region

# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis 配置（可选，用于会话存储）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log